@if (Index > 0)
{
    @foreach (var length in Lengths)
    {
        <div
            class="multi-timeline-connector"
            style="grid-column: 2/@(Index + 2); grid-row: @length/@(length + 1)">

        </div>
    }
}
@if (Lengths.Last() > 1)
{
    <div
        class="multi-timeline-track"
        style="grid-column: @(Index + 2) / @(Index + 3); grid-row: 1/@Lengths.Last()">

    </div>
}

@code {
    [Parameter]
    [EditorRequired]
    public required int Index { get; set; }
    
    [Parameter]
    [EditorRequired]
    public required IEnumerable<int> Lengths { get; set; }
}