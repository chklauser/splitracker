@using Splitracker.Domain
<MudCard Elevation="0">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText
                Typo="@Typo.h6">
                @Tick.Effect.Description
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>
            (Effekt wird entfernt)
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton
            Variant="Variant.Filled"
            Color="@(IsHappeningNow ? Color.Primary : Color.Warning)">
            @if (IsHappeningNow)
            {
                <text>Ist abgehandelt!</text>
            }
            else
            {
                <text>Entfernen!</text>
            }
        </MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    [EditorRequired]
    public required Tick.EffectTick Tick { get; set; }
    
    [Parameter]
    [EditorRequired]
    public required bool IsHappeningNow { get; set; }
}